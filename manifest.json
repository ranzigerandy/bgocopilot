{
  "manifest_version": 3,
  "name": "BGO Copilot",
  "version": "2.3",
  "description": "Scrape content and select images from accommodation websites.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://kareldemeersseman.app.n8n.cloud/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/bgo_copilot_icon.png",
      "48": "icons/bgo_copilot_icon.png",
      "128": "icons/bgo_copilot_icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.natuurhuisje.be/*",
        "https://www.vipio.com/*",
        "https://www.booking.com/hotel/*",
        "https://campspace.com/nl/s/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/bgo_copilot_icon.png",
    "48": "icons/bgo_copilot_icon.png",
    "128": "icons/bgo_copilot_icon.png"
  }
}